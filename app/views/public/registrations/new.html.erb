<h4 class="title">新規会員登録</h4>

<%= form_with model: resource, url: registration_path(resource) do |f| %>

  <table>
    <tbody>
      <tr>
        <td><%= f.label :first_name, "名前" %></td>
        <td><%= f.label :last_name, "（姓）" %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.label :first_name, "（名）" %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :first_name_kana, "フリガナ" %></td>
        <td><%= f.label :last_name_kana, "（セイ）" %></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.label :first_name_kana, "(メイ)" %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :address, "住所" %></td>
        <td></td>
        <td colspan="3"><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>（<%= @minimum_password_length %> 文字以上）</em>
          <% end %>
        </td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
<h4>既に登録済みの方</h4>
<div>
  <%= link_to "こちら", new_customer_session_path %>からログインしてください。
</div>