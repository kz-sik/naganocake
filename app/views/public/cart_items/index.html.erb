<h4>ショッピングカート</h4>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.image %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.add_tax_price %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
        <td>

        </td>
      </tr>
    <% end %>
    <tr>
      <td><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></td>
      <td></td>
      <td></td>
      <td>合計金額</td>
      <td></td>
    </tr>
  </tbody>
</table>
