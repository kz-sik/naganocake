<h4><span class="title">会員情報編集</span></h4>

<%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
<table>
  <tbody>
    <tr>
      <td><%= f.label :last_name, "氏名" %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :last_name_kana, "フリガナ" %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :postal_code, "郵便番号" %></td>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :address %></td>
      <td colspan="3"><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :telephone_number %></td>
      <td><%= f.text_field :telephone_number %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
      <td></td>
      <td><%= link_to "退会する",  customers_unsubscribe_path, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
</table>
<% end %>