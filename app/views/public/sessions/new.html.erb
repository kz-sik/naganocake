<h4 class="title">ログイン</h4>

<h5 class="title">会員の方はこちらからログイン</h5>
<%= form_with model: resource, url: session_path(resource) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<h5 class="title">会員登録がお済みでない方</h5>
<div>
  <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
</div>