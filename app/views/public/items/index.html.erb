<table>
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4>
  商品一覧<small>（全<%= @items.count %>件）</small>
</h4>

<div>
  <% @items.each do |item| %>
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_item_image(200,200) %>
    <% end %>
    <%= item.name %>
    ￥<%= item.price.to_s(:delimited) %>
  <% end %>
  <%= paginate @items %>
</div>