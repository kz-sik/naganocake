<h4 class="title">注文履歴詳細</h4>
<p>注文情報</p>
<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        〒<%= @order.postal_code %><br>
        <%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
  </tbody>
</table>
<p>請求情報</p>
<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th><strong>ご請求額</strong></th>
      <td><%= @order.price %></td>
    </tr>
  </tbody>
</table>
<p>注文内容</p>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
      </tr>
    <% end %>
  </tbody>
</table>