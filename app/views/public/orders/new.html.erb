<h4><span class="title">注文情報の入力</span></h4>
<%= form_with model: @order, url: orders_comfirm_path do |f| %>
  <%= f.label :payment, "支払い方法" %><br>
  <%= f.radio_button :payment, :credit_card %>
  <%= f.label :payment_credit_card, "クレジットカード" %><br>
  <%= f.radio_button :payment, :transfer %>
  <%= f.label :payment_transfer, "銀行振込" %><br>
  <%= f.label :address, "お届け先" %><br>
  <%= f.radio_button :select_address, "0" %>
  <%= f.label :select_address , "ご自身の住所" %><br>
  <%= '〒' + @customer.postal_code + ' ' + @customer.address + ' ' + @customer.full_name %><br>
  <%= f.radio_button :select_address, "1" %>
  <%= f.label :select_address , "登録済住所から選択" %><br>
  <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %><br>
  <%= f.radio_button :select_address, "2" %>
  <%= f.label :select_address , "新しいお届け先" %><br>
  <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %><br>
  <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
<% end %>
