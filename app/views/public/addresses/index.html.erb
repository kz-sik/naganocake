<h4><span class="title">配送先登録/一覧</span></h4>
<%= form_with model: @address, url: addresses_path do |f| %>
  <table>
    <tbody>
      <tr>
        <td>郵便番号（ハイフンなし）</td>
        <td><%= f.text_field :postal_code %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="2"><%= f.text_field :address %></td>
        <td></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, data: {confirm: '削除してもいいですか？'}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>