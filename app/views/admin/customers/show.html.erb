<h4><span class="title"><%= @customer.full_name %>さんの会員詳細</span></h4>

<table>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %>&emsp;<%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana %>&emsp;<%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_deleted %>
          <div>無効</div>
        <% else %>
          <div>有効</div>
        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
        &emsp;
        <%= link_to "注文一覧を見る", admin_order_path(@customer.id), class: "btn btn-primary" %>
      </td>
    </tr>
  </tbody>
</table>