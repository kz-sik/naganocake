<h4 class="title">会員一覧</h4>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted %>
        <div>退会</div>
        <% else %>
          <div>有効</div>
        <% end %>
      </td>
    </tr>
    <% end %>
    <%= paginate @customers %>
  </tbody>
</table>