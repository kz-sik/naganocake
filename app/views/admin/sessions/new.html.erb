<div class="container">
  <div class="row-lg-10">
    <h3 class="bg-light text-dark"><strong>管理者</strong>ログイン</h3>
    <div class="mx-auto col-sm-8">

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary btn-md" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>

