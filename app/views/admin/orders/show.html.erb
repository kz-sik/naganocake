<h1>注文履歴詳細</h1>
<table>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.full_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.postal_code %>&emsp;<%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.order_status_i18n %></td>
    </tr>
    <tr>
      <%= form_with model: @order, url: admin_order_path(params[:id]), method: :patch do |f| %>
        <td><%= f.label :order_status, "注文ステータス" %></td>
        <td><%= f.select :order_status_i18n, *[0..4] %></td>
        <td><%= f.submit "更新", class: "btn btn-success" %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<table>
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
    <th></th>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
        <%= form_with model: order_detail, url: admin_order_path(order_detail.id), method: :patch do |f| %>
          <td><%= f.select :crafting_status_i18n, *[0..3] %></td>
          <td><%= f.submit "更新", class: "btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>