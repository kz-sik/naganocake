<h4><span class="title">商品詳細</span></h4>
<div><%= image_tag @item.get_item_image(200,200) %></div>
<table>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格<br>（税抜価格）</td>
      <td><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @item.is_active %>
          <div>販売中</div>
        <% else %>
          <div>販売停止中</div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<div><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-sm" %></div>